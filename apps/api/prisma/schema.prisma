generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id   String @id
    name String

    ExerciseType    ExerciseType[]
    Translation     Translation[]
    UserPreferences UserPreferences?
    Workout         Workout[]
    WorkItem        WorkItem[]
}

model UserPreferences {
    userId     String     @id
    localeCode String     @db.Char(5)
    unit       WeightUnit

    Locale Locale @relation(fields: [localeCode], references: [code])
    User   User   @relation(fields: [userId], references: [id])
}

model ExerciseType {
    id              String
    userId          String
    translationCode String

    User         User           @relation(fields: [userId], references: [id])
    PersonalBest PersonalBest[]
    WorkItem     WorkItem[]
    @@id([userId, id])
}

model PersonalBest {
    id Int @id @default(autoincrement())

    userId     String
    eserciseId String
    starting   DateTime
    weight     Int      @db.SmallInt

    ExerciseType ExerciseType @relation(fields: [userId, eserciseId], references: [userId, id])
}

enum WeightUnit {
    kg
    lbs
}

model Locale {
    code String @id @db.Char(5)

    Translation     Translation[]
    UserPreferences UserPreferences[]
}

model Translation {
    localeCode String @db.Char(5)
    userId     String
    code       String
    value      String

    Locale Locale @relation(fields: [localeCode], references: [code])
    User   User   @relation(fields: [userId], references: [id])

    @@id([userId, code, localeCode])
}

model Workout {
    id     Int    @id @default(autoincrement())
    userId String

    date    DateTime
    comment String?

    User     User       @relation(fields: [userId], references: [id])
    WorkItem WorkItem[]
}

model WorkItem {
    id         Int    @id @default(autoincrement())
    workoutId  Int
    userId     String
    exerciseId String

    order   Int     @db.SmallInt
    sets    Int     @default(1) @db.SmallInt
    reps    Int     @db.SmallInt
    weight  Int     @db.SmallInt
    comment String?

    User         User         @relation(fields: [userId], references: [id])
    Workout      Workout      @relation(fields: [workoutId], references: [id])
    ExerciseType ExerciseType @relation(fields: [userId, exerciseId], references: [userId, id])
}
